{
  "name": "@ocr-platform/mobile-platform",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "dev": "expo start",
    "build": "expo export --platform all",
    "build:development": "EXPO_PUBLIC_ENV=development expo export --platform all",
    "build:production": "EXPO_PUBLIC_ENV=production expo export --platform all",
    "preview": "expo start --offline",
    "lint": "eslint . --config ../../eslint.config.js",
    "lint:fix": "eslint . --config ../../eslint.config.js --fix",
    "format": "prettier --write . --config ../../.prettierrc",
    "format:check": "prettier --check . --config ../../.prettierrc",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "ci": "yarn lint && yarn type-check",
    "prepare": "husky install",
    "preinstall": "npx only-allow yarn"
  },
  "dependencies": {
    "@ocr-platform/shared": "1.0.0",
    "@react-native-masked-view/masked-view": "^0.3.2",
    "@react-navigation/native": "^7.1.16",
    "@react-navigation/stack": "^7.4.4",
    "@tanstack/react-query": "^5.84.0",
    "axios": "^1.12.2",
    "axios-case-converter": "^1.1.1",
    "expo": "^52.0.0",
    "expo-build-properties": "~0.13.3",
    "expo-constants": "^16.0.2",
    "expo-linking": "^6.3.1",
    "expo-localization": "^15.0.0",
    "expo-router": "^4.0.21",
    "expo-status-bar": "^2.0.0",
    "i18next": "^25.3.2",
    "intl-pluralrules": "^2.0.1",
    "nativewind": "^2.0.11",
    "react": "19.1.0",
    "react-error-boundary": "^5.0.0",
    "react-i18next": "^15.6.1",
    "react-native": "0.80.2",
    "react-native-gesture-handler": "^2.27.2",
    "react-native-mmkv": "^3.3.0",
    "react-native-reanimated": "^4.0.1",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "4.13.1",
    "react-native-svg": "^15.12.1",
    "react-native-worklets": "^0.6.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.26.10",
    "@eslint/js": "^9.23.0",
    "@react-native-community/cli": "19.1.1",
    "@react-native-community/cli-platform-android": "19.1.1",
    "@react-native-community/cli-platform-ios": "19.1.1",
    "@react-native/babel-preset": "0.80.2",
    "@react-native/eslint-config": "0.80.2",
    "@react-native/metro-config": "0.80.2",
    "@react-native/typescript-config": "0.80.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.2",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.13.17",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "@typescript-eslint/parser": "^8.29.0",
    "babel-plugin-inline-dotenv": "^1.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-root-import": "^6.6.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-testing-library": "^7.6.3",
    "eslint-plugin-unicorn": "^60.0.0",
    "expo-build-properties": "^1.0.9",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "^52.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.6.2",
    "react-native-svg-transformer": "^1.5.0",
    "react-test-renderer": "19.1.0",
    "reactotron-react-native": "^5.1.12",
    "reactotron-react-native-mmkv": "^0.2.8",
    "reactotron-react-query": "^2.0.2",
    "tailwindcss": "^3.4.15",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "prettier --config ../../.prettierrc --write",
      "eslint --config ../../eslint.config.js"
    ]
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?|expo(nent)?|@expo(nent)?/.*|@expo/vector-icons|expo-router|expo-localization|nativewind|react-native-svg|react-native-mmkv|@tanstack/react-query))"
    ]
  },
  "engines": {
    "node": ">=20.12",
    "yarn": ">=1.22.0"
  }
}
